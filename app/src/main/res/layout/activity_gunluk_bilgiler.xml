<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gunluk_bilgiler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voikan.onlinesalksistemi.gunluk_bilgiler">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="KAYDET"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:id="@+id/btngunluk_kaydet"
                android:gravity="center"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.42"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/etxtadim_sayisi" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etxtbuyuk_tansiyon"
                android:hint="Büyük Tansiyon"
                android:maxLength="2"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etxtkucuk_tansiyon"
                android:maxLength="2"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etxtbuyuk_tansiyon"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="Küçük Tansiyon"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etxtseker_orani"
                app:layout_constraintTop_toBottomOf="@+id/etxtkucuk_tansiyon"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                android:hint="Şeker Oranı"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/etxticilen_su"
                android:hint="İçilen Su Miktarı"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etxtseker_orani"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etxtadim_sayisi"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/etxticilen_su"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="Atılan Adım Sayısı"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
