<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kullanici_islem_anaekran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voikan.onlinesalksistemi.kullanici_islem_anaekran">

    <ImageButton
        android:layout_width="147dp"
        android:layout_height="163dp"
        app:srcCompat="@mipmap/sifre_icon"
        android:id="@+id/imgbtnsifre_degistir"
        android:background="@drawable/anaekranbtnselector"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <ImageButton
        android:layout_width="313dp"
        android:layout_height="164dp"
        app:srcCompat="@mipmap/boy"
        android:id="@+id/imgbtnboy_kilo_islem"
        android:background="@drawable/anaekranbtnselector"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtilac"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.47" />

    <ImageButton
        android:layout_width="147dp"
        android:layout_height="163dp"
        app:srcCompat="@mipmap/ilac_icon"
        android:id="@+id/imgbtnilac_islemleri"
        android:background="@drawable/anaekranbtnselector"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imgbtnsifre_degistir"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.46" />

    <TextView
        android:text="Şifre Değiştirme"
        android:gravity="center"
        android:background="@drawable/anaekrantextview"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:id="@+id/txtsifre"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnsifre_degistir"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:text="İlaç İşlemleri"
        android:gravity="center"
        android:background="@drawable/anaekrantextview"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:id="@+id/txtilac"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnilac_islemleri"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txtsifre"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="18sp" />

    <TextView
        android:text="Boy - Kilo İşlemleri"
        android:gravity="center"
        android:background="@drawable/anaekrantextview"
        android:layout_height="25dp"
        android:id="@+id/txtboy_kilo"
        android:layout_width="313dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnboy_kilo_islem"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="18sp" />

</android.support.constraint.ConstraintLayout>
