<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ilac_islemleri"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voikan.onlinesalksistemi.ilac_islemleri">

    <AutoCompleteTextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/ototxtilac_adi"
        android:hint="İlaç Adı"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etxtilac_doz"
        android:hint="İlaç Dozu(mg)"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ototxtilac_adi"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Kaydet"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:id="@+id/btnilac_kaydet"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etxtilac_doz"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Kullandığınız İlaçlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtilac_bilgi"
        android:textSize="25sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnilac_kaydet"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <ListView
        android:layout_width="368dp"
        android:id="@+id/lstilaclar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtilac_bilgi"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="Çıkart"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:id="@+id/btn_ilac_cikart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lstilaclar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
