<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sifre_degistirme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voikan.onlinesalksistemi.sifre_degistirme">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etxteski_sifre"
        android:hint="Eski Şifre"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etxtyeni_sifre"
        android:hint="Yeni Şifre"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etxteski_sifre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etxtyeni_sifre_tekrar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etxtyeni_sifre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Yeni Şifre Tekrar" />

    <Button
        android:text="Şifreyi Kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsifre_degistir"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etxtyeni_sifre_tekrar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
