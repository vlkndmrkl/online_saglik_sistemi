<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_randevu_kontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voikan.onlinesalksistemi.randevu_kontrol">

    <TextView
        android:text="Seçili Tarih:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtsecili_tarih"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tarihTv"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/txtsecili_tarih"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="Tarihi Değiştir"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnTarih_degistir"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tarihTv"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="11:00"
        android:layout_width="93dp"
        android:layout_height="97dp"
        android:id="@+id/btn11"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTarih_degistir"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:background="@drawable/anaekranbtn" />

    <Button
        android:text="11:30"
        android:layout_width="141dp"
        android:layout_height="125dp"
        android:id="@+id/btn1130"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn11"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnTarih_degistir" />

    <Button
        android:text="12:00"
        android:layout_width="141dp"
        android:layout_height="122dp"
        android:id="@+id/btn12"
        tools:layout_editor_absoluteX="117dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1130" />

</android.support.constraint.ConstraintLayout>
