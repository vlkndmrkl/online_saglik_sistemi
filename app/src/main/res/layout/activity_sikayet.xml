<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sikayet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.voikan.onlinesalksistemi.sikayet">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etxtsikayet"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="Şikayetinizi Giriniz"
                android:layout_width="0dp"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:text="Şikayetimi Gönder"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnsikayet_gonder"
                tools:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/etxtsikayet"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintLeft_toLeftOf="@+id/etxtsikayet"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="16dp" />

            <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonrandevugetirme"
                tools:layout_editor_absoluteX="151dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextrandevugetirme" />

            <EditText
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editTextrandevugetirme"
                android:text="deneme"
                tools:layout_editor_absoluteX="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnsikayet_gonder" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
